        function ListarDepartamentos()
        {

            $("<option>").attr({ "value": "00","disabled":"disabled","selected":"true" }).text("Seleccione").appendTo("#cbodepartamento");

            jQuery.ajax({
                url: '@Url.Action("ObtenerDepartamento", "Tienda")',
                type: "POST",
                // data: JSON.stringify({ idcategoria: _idcategoria, idmarca: _idmarca }),
